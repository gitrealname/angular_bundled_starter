{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "env": {
        "browser": true,
        "node": true
    },

    "extends": "eslint-config-airbnb",
    "rules": {
        // Override any settings from the "parent" configuration
        "arrow-body-style": 0,
        "no-param-reassign": 0,
        "no-else-return": 0,
        "prefer-rest-params": 1,
        "no-console": 0,
        "spaced-comment": 0,
        "global-require": 1,
        "no-trailing-spaces": 0,
        "no-use-before-define": 0,
        "no-useless-concat": 0,
        "prefer-template":0,
        "keyword-spacing":1,
        "no-undef": 0,
        "no-loop-func": 0,
        "no-unused-vars": ["warn", {"vars": "all", "args": "none"}],
        "quotes": ["error", "single", {"allowTemplateLiterals": true}]
    }
}
